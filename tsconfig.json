{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@/sourcy-models/*": ["src/sourcy-models/lib/*"],
			"@/utils/*": ["src/utils/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", ".mastra"]
}
